<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="jodeware2.View.HomeScreen" BackgroundColor="LightBlue">
    <ContentPage.Content>
        <StackLayout>

            <Label Text="Startseite"
                   VerticalOptions="Center"
                   HorizontalOptions="Center"/>

            <Button Text="Ware hinzufügen"
                    VerticalOptions="CenterAndExpand"
                    HorizontalOptions="Center"
                    HeightRequest="100"
                    WidthRequest="100"
                    FontSize="Medium"
                    Margin="10"/>

            <Button Text="Waren bearbeiten"
                    VerticalOptions="CenterAndExpand"
                    HorizontalOptions="Center"
                    HeightRequest="100"
                    WidthRequest="100"
                    FontSize="Medium"
                    Margin="10"/>

            <Button Text="Berichte"
                    VerticalOptions="CenterAndExpand"
                    HorizontalOptions="Center"
                    HeightRequest="100"
                    WidthRequest="100"
                    FontSize="Medium"
                    Margin="10"/>


            <Label Text="JodeWare 2018"
                   VerticalOptions="Center"
                   HorizontalOptions="Center"/>

        </StackLayout>
    </ContentPage.Content>
</ContentPage>