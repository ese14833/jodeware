<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="jodeware2.View.HomeScreen" BackgroundColor="LightBlue">
    <ContentPage.Content>
        <StackLayout>

            <ScrollView  Orientation = "Vertical"/>

            <Label Text="Startseite"
                   VerticalOptions="Center"
                   HorizontalOptions="Center"/>
            
            <StackLayout Orientation="Vertical" VerticalOptions="Center" HorizontalOptions="Center" >
                
            <Button Text="Ware hinzufügen"
                    VerticalOptions="CenterAndExpand"
                    HorizontalOptions="CenterAndExpand"
                    HeightRequest="100"
                    FontSize="Medium"
                    BackgroundColor="WhiteSmoke"
                    BorderColor="Black"
                    Margin="10"/>

            <Button Text="Waren bearbeiten"
                    VerticalOptions="CenterAndExpand"
                    HorizontalOptions="CenterAndExpand"
                    HeightRequest="100"
                    FontSize="Medium"
                    BackgroundColor="WhiteSmoke"
                    BorderColor="Black"
                    Clicked="EditBtn"
                    Margin="10"/>

            <Button Text="Berichte"
                    VerticalOptions="CenterAndExpand"
                    HorizontalOptions="CenterAndExpand"
                    HeightRequest="100"
                    FontSize="Medium"
                    BackgroundColor="WhiteSmoke"
                    BorderColor="Black"
                    Margin="10"/>


            <Button Text="Abmelden"
                    VerticalOptions="CenterAndExpand"
                    HorizontalOptions="CenterAndExpand"
                    HeightRequest="70"
                    FontSize="Medium"
                    BackgroundColor="WhiteSmoke"
                    BorderColor="Black"
                    Clicked="LogOut"
                    Margin="10"/>
            </StackLayout>

            <Label Text="JodeWare 2018"
                   VerticalOptions="Center"
                   HorizontalOptions="Center"/>

        </StackLayout>
    </ContentPage.Content>
</ContentPage>