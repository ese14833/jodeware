<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="jodeware2.View.Adden">
    <ContentPage.Content>
        <StackLayout>
            <Label Text="Ware hinzufügen"
                VerticalOptions="CenterAndExpand" 
                HorizontalOptions="CenterAndExpand" />

            <Label x:Name="l_bezeichnung" Text="Bezeichnung:" Font="Calibri"/>
            <Entry x:Name="e_bezeichnung" Placeholder="Bezeichnung des Produkts" BackgroundColor="WhiteSmoke"/>
            <Label x:Name="l_kategorie" Text="Kategorie:" Font="Calibri"/>
            <Entry x:Name="e_kategorie" Placeholder="Kategorie" BackgroundColor="WhiteSmoke"/>
            <Label x:Name="l_menge" Text="Menge" Font="Calibri"/>
            <Entry x:Name="e_menge" Placeholder="Menge" BackgroundColor="WhiteSmoke"/>
            <Label x:Name="l_location" Text="Standort" Font="Calibri"/>
            <Entry x:Name="e_location" Placeholder="Standort" BackgroundColor="WhiteSmoke"/>

            <Button x:Name="b_hinzufuegen" Text="Hinzufügen" BackgroundColor="WhiteSmoke" BorderRadius="50" BorderWidth="Medium" Clicked="hinzufuegen"/>

        </StackLayout>
    </ContentPage.Content>
</ContentPage>