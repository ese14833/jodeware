<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="jodeware2.View.ProduktAendern">
    <ContentPage.Content>
        <StackLayout>
            <StackLayout Spacing="10" Margin="10">

                <Label x:Name="l_bezeichnung" Text="Produktbezeichnung:" FontAttributes="Bold"/>
                <Entry x:Name="e_bezeichnung" Text="{Binding pro_bezeichnung}" BackgroundColor="Transparent"/>

                <Label x:Name="l_beschreibung" Text="Beschreibung:" FontAttributes="Bold"/>
                <Entry x:Name="e_beschreibung" Text="{Binding pro_beschreibung}" BackgroundColor="Transparent"/>

                <Button x:Name="btn_update" Text="Speichern" Clicked="Speichern_Clicked" BackgroundColor="WhiteSmoke" BorderColor="Black" BorderRadius="6" Image="minisave.png"/>
                <Button x:Name="btn_home" Text="Startseite" BackgroundColor="DarkGray" BorderColor="Black" Clicked="Home_Clicked" BorderRadius="6" Image="home.png"/>

            </StackLayout>
        </StackLayout>
    </ContentPage.Content>
</ContentPage>