<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="jodeware2.View.LoginPage" BackgroundColor="LightBlue">
    <ContentPage.Content>


        <StackLayout Spacing="10" Padding="50" VerticalOptions="Center">

            <Image Source = "jodewarelogo.png"/>

            <Label x:Name="lbl_username" Text="Benutzername"/>
            <Entry x:Name="entry_username" Placeholder="Benutzername" BackgroundColor="WhiteSmoke" Keyboard="Email"/>
            <Label x:Name="lbl_password" Text="Passwort"/>
            <Entry x:Name="entry_password" Placeholder="Passwort" BackgroundColor="WhiteSmoke" IsPassword="True"/>
            <Button x:Name="Btn_Anmelden" Text="Anmelden" Clicked="SignInProcedure" BackgroundColor="WhiteSmoke" BorderRadius="10" BorderColor="Black"/>
        </StackLayout>
    </ContentPage.Content>
</ContentPage>